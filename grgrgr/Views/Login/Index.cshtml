@model IEnumerable<users>
@{
    ViewBag.Title = "Login";
}

<!-- Link to the external CSS file -->
<link rel="stylesheet" href="~/Img/style.css" />

<div class="center-container">
    <div class="rounded-container">

        <!-- Login Form -->
        <div>
            <h3>@ViewBag.Title</h3>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }

            <form action="@Url.Action("Authenticate", "Login")" method="post">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" class="form-control input-width" required />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control input-width" required />
                </div>
                <div class="form-group text-center">
                    <!-- Center align the button -->
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div>
            <h3>Sign Up</h3>
            <p>Don't have an account? <a href="/SignUp/Index">Sign Up</a></p>
        </div>
    </div>
</div>
