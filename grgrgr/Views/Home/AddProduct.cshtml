@model grgrgr.products
@{
    ViewBag.Title = "Add Product";
}

<h2>Add Product</h2>

@using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.name)
        @Html.TextBoxFor(model => model.name, new { @class = "form-control", required = "required" })
        <div class="invalid-feedback">Please enter the product name.</div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.price)
        @Html.TextBoxFor(model => model.price, new { @class = "form-control", required = "required", type = "number", step = "0.01" })
        <div class="invalid-feedback">Please enter a valid price.</div>
    </div>

    <div class="form-group">
        @Html.Label("Image")
        <input type="file" name="image" class="form-control-file" />
    </div>

    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
}
